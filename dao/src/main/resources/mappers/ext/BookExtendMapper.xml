<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.briup.bookstore.mapper.ext.BookExtendMapper">    <resultMap id="BaseResultMap" extends="com.briup.bookstore.mapper.BookMapper.BaseResultMap"               type="com.briup.bookstore.po.ext.BookExtend">        <result property="categoryName" column="categoryName"/>    </resultMap>    <select id="selectBooksBefore20" resultType="com.briup.bookstore.po.ext.BookExtend">        select * from book.es_book where id limit 20;    </select>    <select id="selectBookById" resultType="com.briup.bookstore.po.Book">        select * from book.es_book where id = #{id};    </select>    <select id="selectBooksByCondition" resultType="com.briup.bookstore.po.ext.BookExtend">        select * from book.es_book        <where>            <if test="categoryId!=null">                category_id = #{categoryId}            </if>        <if test="query!=null">                and name like concat('%',#{query},'%') or publisher like concat('%',#{query},'%') or author like concat('%',#{query},'%')        </if>        </where>    </select></mapper>